<div class="contact-page-wrap">

<div class="contact_form_container">
	<span class="contact_us">Contact Us</span>
	<%= form_for(:message, url: contact_index_path, html: {:class => 'contact_body_field'}) do |f| %>
		<%= f.text_field :contact_name, placeholder: "your name", class: 'contact_form_field' %>
		<%= f.text_field :contact_email, placeholder: "your email", class: 'contact_form_field' %>
		<%= f.text_area :message_content, placeholder: "message", class: 'contact_form_field', size: "40x7" %>
		<%= f.submit "send", class: 'contact_form_btn' %>
	<% end %>
	<div class="contact_notify"><%= session[:message] %></div>
	<% session.delete(:message) %>
</div>

<div class="extra">
	<span><%= link_to 'Terms & Privacy', policy_index_path, class: "black_a" %></span>
	<span>|</span>
	<span><%= link_to 'Shipping & Returns', shipping_index_path, class: "black_a" %></span>
</div>

</div>

