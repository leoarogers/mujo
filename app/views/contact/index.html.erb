<%= link_to root_path do %>
<div class="upper_left_icon_black"></div>
<% end %>

<div class="menu">
	<span><%= link_to 'SHOP', shop_index_path, class: "black_a" %></span>
	<span><%= link_to 'ABOUT', about_index_path, class: "black_a" %></span>
	<span><%= link_to 'LOOKBOOK', lookbook_index_path, class: "black_a" %></span>
	<span><%= link_to 'CONTACT', contact_index_path, class: "black_a" %></span>
</div>

<div class="social_icons">
  <a class="social" href="https://www.facebook.com/mujonyc" target="_blank"><img class="social_pic" src="<%= image_path('FBIconBlack.png') %>" height="13" width="13"></a>
    <a class="social" href="https://instagram.com/mujonyc" target="_blank"><img class="social_pic" src="<%= image_path('IGIconBlack.png') %>" height="13" width="13"></a>
</div>

<div class="contact-page-wrap">

<div class="contact_form_container">
	<span class="contact_us">Contact Us</span>
	<%= form_for(:message, url: contact_index_path, html: {:class => 'contact_body_field'}) do |f| %>
		<%= f.text_field :contact_email, placeholder: "your email", class: 'contact_form_field' %>
		<%= f.text_area :message_content, placeholder: "message", class: 'contact_form_field', size: "40x7" %>
		<%= f.submit "send", class: 'contact_form_btn' %>
	<% end %>
	<div class="contact_notify"><%= session[:message] %></div>
	<% session.delete(:message) %>
</div>

</div>